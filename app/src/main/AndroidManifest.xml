<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medical_clinic_scheduling_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedicalClinicSchedulingApp">
        <activity
            android:name=".PatientAppointmentsView"
            android:label="Patient Appointments"
            android:parentActivityName=".LoginPageActivity"/>
        <activity
            android:name=".DoctorViewAppointmentActivity"
            android:parentActivityName=".LoginPageActivity"
            android:exported="true" />
        <activity
            android:name=".SelectAppointmentTimes"
            android:label="Doctor Availabilities"
            android:parentActivityName=".BookYourAppointmentMain" />
        <activity
            android:name=".AppointmentFilterOptions"
            android:label="Filter Doctor By"
            android:parentActivityName=".BookYourAppointmentMain" />
        <activity
            android:name=".BookYourAppointmentMain"
            android:label="Book Your Appointment"
            android:parentActivityName=".PatientAppointmentsView" />
        <activity
            android:name=".PatientRegisterActivity"
            android:label="@string/register_patient_title"
            android:parentActivityName=".RegisterActivity" />
        <activity
            android:name=".DoctorRegisterActivity"
            android:label="@string/register_doctor_title"
            android:parentActivityName=".RegisterActivity" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register_title"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LoginPageActivity"
            android:label="@string/login_title"
            android:parentActivityName=".MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>